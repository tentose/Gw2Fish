@inject NavigationManager NavManager

<MudDialog>
    <DialogContent>
        <div class="d-flex flex-column py-1">
            <MudButton Color="Color.Primary" OnClick="Regular">@(Location + " Fisher")</MudButton>
            <MudButton Color="Color.Primary" OnClick="Avid">@("Avid " + Location + " Fisher")</MudButton>
        </div>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }

    [Parameter] public string Location { get; set; }

    void Regular()
    {
        NavManager.NavigateTo("/achievements/" + Location + " Fisher");
    }

    void Avid()
    {
        NavManager.NavigateTo("/achievements/Avid " + Location + " Fisher");
    }

    void Cancel() => MudDialog.Cancel();
}

